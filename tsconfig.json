{
    "compilerOptions": {
        "target": "ESNext",
        "useDefineForClassFields": true,
        "outDir": "dist",
        "lib": ["ESNext"],
        "allowJs": false,
        "skipLibCheck": true,
        "esModuleInterop": false,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "module": "CommonJS",
        "moduleResolution": "Node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": false
    },
    "include": ["src"]
}
